generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username        String       @id
  hashedPassword  String
  firstName       String
  lastName        String
  profilePicture  String
  posts           Post[]
  likes           Like[]
  comments        Comment[]
  followedBy      Follows[]    @relation("follower")
  following       Follows[]    @relation("followed")
}

model Post {
  postId         Int          @id @default(autoincrement())
  picture        String
  caption        String?
  createdAt      DateTime     @default(now())
  userUsername   String
  User           User         @relation(fields: [userUsername], references: [username])
  comments       Comment[]
  likedBy        Like[]
}

model Comment {
  commentId      Int           @id @default(autoincrement())
  text           String
  createdAt      DateTime      @default(now())
  userUsername   String
  postPostId     Int
  parentCommentId Int?
  User           User          @relation(fields: [userUsername], references: [username])
  Post           Post          @relation(fields: [postPostId], references: [postId])
  parentComment  Comment?      @relation("subcomments", fields: [parentCommentId], references: [commentId])
  subcomments    Comment[]     @relation("subcomments")
}

model Like {
  likeId         Int          @id @default(autoincrement())
  userUsername   String
  postPostId     Int
  User           User         @relation(fields: [userUsername], references: [username])
  Post           Post         @relation(fields: [postPostId], references: [postId])
}

model Follows {
  followerUsername String
  followedUsername String
  follower         User        @relation("follower", fields: [followerUsername], references: [username])
  followed         User        @relation("followed", fields: [followedUsername], references: [username])
  @@id([followerUsername, followedUsername])
}